<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/Btn_calc"
        android:layout_width="243dp"
        android:layout_height="0dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="67dp"
        android:backgroundTint="#886868"
        android:text="Calculator"
        android:textSize="30dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Intent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btn_Intent"
        android:layout_width="245dp"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        android:text="Intent"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/Btn_Web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_calc" />

    <Button
        android:id="@+id/Btn_Web"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:layout_marginBottom="199dp"
        android:backgroundTint="#009688"
        android:text="Web"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Btn_Intent" />
</android.support.constraint.ConstraintLayout>